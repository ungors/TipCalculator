<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.tipcalculator.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/edit_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:hint="Enter your bill"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edit_bill"
            android:layout_below="@+id/edit_bill"
            android:layout_marginTop="26dp"
            android:text=" Tip Percentage"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/seekbar_percentage"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_percentage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:max="20" />

        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/seekbar_percentage"
            android:layout_below="@+id/seekbar_percentage"
            android:layout_marginTop="83dp"
            android:text="Calculate Tip" />

        <TextView
            android:id="@+id/txt_percentage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_percentage"
            android:layout_below="@+id/seekbar_percentage"
            android:layout_marginTop="49dp"
            android:text="  "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_calculate"
            android:layout_marginTop="57dp"
            android:layout_toEndOf="@+id/txt_percentage2"
            android:textSize="24sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
